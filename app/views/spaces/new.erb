<div class="container container-top-margin">
  <div class="row">
    <form class="form-sign-up col-12 col-md-6 p-3" action='/spaces' method='post'>
      <h3 class='p-4 text-center'>Create a Space</h3>
          <div class="form-group row">
             <label class="col-4" for="name">Name:</label>
             <input class="form-control col-8" type="text" name="name" value="" required>
          </div>
          <div class="form-group row">
            <label class="col-4" for="description_text_area">Description:</label>
            <textarea class="form-control col-8" id="description_text_area" name="description" rows="3" required></textarea>
          </div>
          <div class="form-group row">
            <label class="col-4" for='price'>Price:</label>
            <input class="form-control col-8" type='text' name='price' required>
          </div>
          <div class="form-group row">
            <label class="col-4" for='from'>From:</label>
            <input class="form-control col-8" type='date' name='from' required>
          </div>
          <div class="form-group row">
            <label class="col-4" for='to'>To:</label>
            <input class="form-control col-8" type='date' name='to' required>
          </div>
          <div class="form-group d-flex justify-content-center">
            <button class="btn btn-lg" type="submit" name="list_new_space" id="list_new_space">List New Space</button>
          </div>
    </form>
  </div>
</div>
