<div class="container">
  <div class="row mb-5">
    <div class="col-12 text-center mb-5">
      <h3>Book your stay&hellip;</h3>
    </div>
    <div class="col-12 space my-1">
      <div class="card">
        <h2 class="card-header text-center"><%= @space.name %></h2>
        <div class="card-block">
          <h6 class="card-subtitle mb-2 text-muted">Listed by - <%= @space.user.name %></h6>
          <p class="card-text text-center"><%= @space.description %></p>
          <div class="row text-center pb-3">
            <div class="col-6">
              <p class="card-text">Available from - <%= @space.from.strftime("%d/%m/%y")%> to <%= @space.to.strftime("%d/%m/%y")%></p>
            </div>
            <div class="col-6">
              <p class="card-text">Price per night Â£<%= @space.price %></p>
            </div>
          </div>
        </div>
        <div class="card-footer text-muted">
          <div class="row">
            <div class="col-12">
                <form action='/requests' method='post'>
                  <div class="form-group row">
                    <label class="col-4 offset-2 text-right mb-0 label-line-height" for='date'>Staying the Night Of</label>
                    <input class="form-control col-4" type='date' name='date' required>
                    <input type="hidden" name="space_id" value="<%=@space.id%>"/>
                  </div>
                  <div class="form-group d-flex justify-content-center">
                    <button class="btn btn-lg" type="submit" name="request_to_book" id="request_to_book">Request To Book</button>
                  </div>
              </form>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
