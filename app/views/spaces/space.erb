<ul>
  <li><%= @space.name %></li>
  <li><%= @space.description %></li>
  <li><%= @space.price %></li>
  <li><%= @space.from.strftime("%d/%m/%y") %></li>
  <li><%= @space.to.strftime("%d/%m/%y") %></li>
</ul>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 offset-md-3">
        <form action='/requests' method='post'>
          <div class="form-group row">
            <label class="col-4" for='date'>Staying the Night Of</label>
            <input class="form-control col-8" type='date' name='date' required>
          </div>
          <div class="form-group d-flex justify-content-center">
            <button class="btn btn-lg" type="submit" name="request_to_book" id="request_to_book">Request To Book</button>
          </div>
      </form>
      </div>
  </div>
</div>
