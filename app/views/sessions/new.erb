<div class="container container-top-margin">
  <div class="row">
    <form class="form-sign-up col-12 col-md-6 p-3" action='/sessions' method='post'>
      <h3 class='p-4 text-center'>Sign In</h3>
          <div class="form-group row">
            <label class="col-4" for='email'>Email:</label>
            <input class="form-control col-8" type='email' name='email' required>
          </div>
          <div class="form-group row">
            <label class="col-4" for='password'>Password:</label>
            <input class="form-control col-8" type='password' name='password' required>
          </div>
          <div class="form-group d-flex justify-content-center">
            <button class="btn btn-lg" type="submit" name="sign_in" id="sign_in_submit">Sign In</button>
          </div>
    </form>
</div>
