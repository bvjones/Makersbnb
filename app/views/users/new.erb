<div class="container container-top-margin">
  <div class="row">
    <form class="form-sign-up col-12 col-md-6 p-3" action='/users' method='post'>
      <h3 class='p-4 text-center'>Sign Up</h3>
            <div class="form-group row">
               <label class="col-4" for="name">Name:</label>
               <input class="form-control col-8" type="text" name="name" value="" required>
            </div>
            <div class="form-group row">
              <label class="col-4" for='username'>Username:</label>
              <input class="form-control col-8" type='text' name='username' required>
            </div>
            <div class="form-group row">
              <label class="col-4" for='email'>Email:</label>
              <input class="form-control col-8" type='text' name='email' required>
            </div>
            <div class="form-group row">
              <label class="col-5" for='password'>Password:</label>
              <input class="form-control col-7" type='password' name='password' required>
            </div>
            <div class="form-group row">
              <label class="col-5" for='password_confirmation'>Password confirmation:</label>
              <input class="form-control col-7" type='password' name='password_confirmation' required>
            </div>
            <div class="form-group d-flex justify-content-center">
              <button class="btn btn-lg" type="submit" name="sign_up" id="sign_up_submit">Sign Up</button>
            </div>
    </form>
  </div>
</div>
