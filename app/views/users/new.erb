<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 offset-md-3">
        <form action='/users' method='post'>
          <div class="form-group row">
             <label class="col-4" for="name">Name</label>
             <input class="form-control col-8" type="text" name="name" value="" required>
          </div>
          <div class="form-group row">
            <label class="col-4" for='username'>Username:</label>
            <input class="form-control col-8" type='text' name='username' required>
          </div>
          <div class="form-group row">
            <label class="col-4" for='email'>Email:</label>
            <input class="form-control col-8" type='text' name='email' required>
          </div>
          <div class="form-group row">
            <label class="col-4" for='password'>Password:</label>
            <input class="form-control col-8" type='password' name='password' required>
          </div>
          <div class="form-group row">
            <label class="col-4" for='password_confirmation'>Password confirmation:</label>
            <input class="form-control col-8" type='password' name='password_confirmation' required>
          </div>
          <div class="form-group d-flex justify-content-center">
            <button class="btn btn-lg" type="submit" name="sign_up" id="sign_up_submit">Sign Up</button>
          </div>
      </form>
      </div>
  </div>
</div>
