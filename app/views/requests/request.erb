<div class="container">
    <div class="row mb-5">
        <div class="col-12 text-center mb-5">
            <h3>Review your request&hellip;</h3>
        </div>
        <div class="col-12 col-lg-6 offset-lg-3 space my-1">
            <div class="card">
                <h2 class="card-header text-center"><%= @single_request.space.name %></h2>
                <div class="card-block">
                    <h4 class="card-subtitle mb-2 text-muted">Requested by -
                        <%= @single_request.user.name %></h4>
                    <h6 class="card-subtitle my-2 text-muted">Date Requested -
                        <%= @single_request.date.strftime("%d/%m/%y") %></h6>
                    <div class="row text-center pb-3">
                        <div class="col-6"></div>
                        <div class="col-6"></div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12">
                            <form action='/requests/<%=@single_request.id%>' method='post'>
                                <input type="hidden" name="_method" value="patch">
                                <div class="form-group row d-flex justify-content-center">
                                    <button class="btn col-8 btn-lg" type="submit" name="update_status" value='confirmed' id="confirm_book">Confirm Request</button>
                                </div>
                            </form>
                            <form action='/requests/<%=@single_request.id%>' method='post'>
                                <input type="hidden" name="_method" value="patch">
                                <div class="form-group row d-flex justify-content-center">
                                    <button class="btn col-8 btn-lg" type="submit" name="update_status" value='denied' id="deny_book">Deny Request</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
