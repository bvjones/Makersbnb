<div class="row">
    <% recent_spaces.each do |space| %>
    <div class="col-12 space my-1">
      <a href="/spaces/<%= space.id %>">
      <div class="card">
        <div class="card-block row">
          <div class="col-12 col-md-6">
            <h4 class="card-title"><%= space.name %></h4>
            <h6 class="card-subtitle mb-2 text-muted">Listed by - <%= space.user.name %></h6>
            <p class="card-text text-center"><%= space.description.length > 400 ? "#{space.description.slice(0..400)}&hellip;" : space.description %></p>
          </div>
          <div class="col-12 col-md-6 space-image-holder">
            <img class="img-fluid" src=<%= space.image_url %> alt="Space image">
          </div>
        </div>
        <div class="card-footer">
          <div class="row">
            <div class="col-8">
              <p class="card-text">Available from - <%= space.from.strftime("%d/%m/%y")%> to <%= space.to.strftime("%d/%m/%y")%></p>
            </div>
            <div class="col-4">
              <p class="card-text">Price per night Â£<%= space.price %></p>
            </div>
          </div>
        </div>
      </div>
      </a>
    </div>
    <% end %>
  </div>
